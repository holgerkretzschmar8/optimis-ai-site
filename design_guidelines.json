    "primary": {
      "main": "#06b6d4",
      "gradient_start": "#06b6d4",
      "gradient_end": "#3b82f6",
      "glow": "rgba(6, 182, 212, 0.5)"
    },
    "secondary": {
      "main": "#8b5cf6",
      "accent": "#d946ef"
