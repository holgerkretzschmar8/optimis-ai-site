  "ui_elements": {
    "glass_card": {
      "base": "bg-slate-950/40 backdrop-blur-xl border border-white/10 rounded-2xl",
      "hover": "hover:bg-slate-950/60 hover:border-cyan-500/30 transition-all duration-300"
    },
    "primary_button": {
      "base": "bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-semibold rounded-full px-8 py-3",
      "hover": "hover:shadow-[0_0_20px_rgba(6,182,212,0.4)] hover:scale-105 transition-all duration-300",
      "text": "text-sm font-medium tracking-wide"
    },
    "secondary_button": {
      "base": "bg-transparent border border-white/20 text-white rounded-full px-8 py-3",
      "hover": "hover:bg-white/10 transition-all duration-300"
    }
  },
  "animations": {
    "scroll_trigger": "Use framer-motion for whileInView={{ opacity: 1, y: 0 }} initial={{ opacity: 0, y: 20 }}",
